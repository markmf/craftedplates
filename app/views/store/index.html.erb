



<br>

<div class="row">
	<% @meals.each do |meal| %>
		<div class="col-md-3">
			<div class="thumbnail">    
				<%= link_to(image_tag(meal.image_url, :size => "250x250"), meal )  %>  
       		
				<div class="caption">
					<h3><strong> <%= meal.name %>  </strong> </h3>
   				</div>
   			</div>
   		</div>
	<% end %>
</div>

